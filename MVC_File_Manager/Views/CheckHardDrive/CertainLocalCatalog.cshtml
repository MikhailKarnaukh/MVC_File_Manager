@using MVC_File_Manager.Models;
@model LocalCatalog
<head>
    <title>@Model.Name</title>
</head>

@if (Model != null)
{
    <h2>@Model.Name</h2>
    @if (Model.ChildCatalogs.Count != 0)
    {
        <ul>
            @foreach (var childCatalog in Model.ChildCatalogs)
            {
                <li>@Html.ActionLink(childCatalog.Name, "CertainLocalCatalog", "CheckHardDrive", childCatalog)</li>
            }
        </ul>
    }
    else
    {
        <h3>This catalog is empty</h3>
    }
}
